# Auto detect text files and perform LF normalization
* text=auto

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text
*.webp binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Documents
*.pdf binary

# JavaScript and TypeScript
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS and related
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# HTML and templates
*.html text eol=lf
*.astro text eol=lf
*.md text eol=lf
*.mdx text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Lock files (generated, should not be modified)
package-lock.json binary
yarn.lock binary
pnpm-lock.yaml binary
