---
/**
 * ExecutiveHero Component
 * Premium hero section for Profit Management homepage
 * Features: Dark sophisticated design, animated entrance, geometric background pattern
 */

import { Icon } from 'astro-icon/components';
import { getLangFromUrl, useTranslations } from '~/utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Hero Container: Dark charcoal background with geometric pattern overlay -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-[#0D0D0D] via-[#1C1C1E] to-[#0D0D0D]">
  
  <!-- Geometric Background Pattern: Subtle grid for depth -->
  <div class="absolute inset-0 opacity-[0.03]">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#C9A227" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <!-- Ambient Gold Glow Effects: Subtle accent lighting -->
  <div class="absolute top-1/4 -left-32 w-96 h-96 bg-[#C9A227] rounded-full blur-[120px] opacity-10 animate-pulse"></div>
  <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-[#C9A227] rounded-full blur-[120px] opacity-10 animate-pulse" style="animation-delay: 2s;"></div>

  <!-- Main Content Container: Centered with max-width constraint -->
  <div class="relative z-10 max-w-5xl mx-auto px-6 py-20 text-center">
    
    <!-- Gold Accent Line: Premium visual separator -->
    <div class="inline-block mb-8 animate-fade-in">
      <div class="h-[2px] w-24 bg-gradient-to-r from-transparent via-[#C9A227] to-transparent"></div>
    </div>

    <!-- Main Headline: Bold, confident, executive tone -->
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight tracking-tight animate-slide-up text-center" style="font-family: 'Poppins', sans-serif; animation-delay: 0.1s; text-align: center !important;">
      {t('hero.title')}<br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] via-[#E5C56A] to-[#C9A227] bg-size-200 animate-gradient">
        {t('hero.titleHighlight')}
      </span>
    </h1>

    <!-- Subheadline: Credibility and value proposition -->
    <p class="text-lg md:text-xl lg:text-2xl text-[#D1D1D1] mb-12 max-w-3xl mx-auto leading-relaxed animate-slide-up text-center" style="font-family: 'Poppins', sans-serif; animation-delay: 0.3s; text-align: center !important;" set:html={t('hero.subtitle').replace(lang === 'ar' ? '26 عاماً' : '26 years', `<span class="text-[#C9A227] font-semibold">26 ${lang === 'ar' ? 'عاماً' : 'years'}</span>`)}>
    </p>

    <!-- CTA Buttons: Primary and secondary actions -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up mb-20" style="animation-delay: 0.5s;">
      
      <!-- Primary CTA: Solid gold button with hover effects -->
      <a 
        href={lang === 'ar' ? '/ar/contact' : '/contact'} 
        class="group bg-gradient-to-r from-[#C9A227] via-[#E5C56A] to-[#C9A227] bg-size-200 hover:bg-pos-100 text-[#0D0D0D] font-bold px-10 py-4 rounded-lg shadow-2xl hover:shadow-[#C9A227]/50 transform hover:scale-105 hover:-translate-y-1 transition-all duration-500 inline-flex items-center gap-3 w-full sm:w-auto sm:min-w-[240px] justify-center"
        style="font-family: 'Poppins', sans-serif;"
      >
        <Icon name="tabler:calendar" class="w-6 h-6 group-hover:rotate-12 transition-transform duration-300" />
        <span>{t('hero.ctaPrimary')}</span>
      </a>

      <!-- Secondary CTA: Outline button with subtle hover -->
      <a 
        href={lang === 'ar' ? '/ar/about' : '/about'} 
        class="group bg-transparent border-2 border-[#C9A227] text-[#C9A227] hover:bg-[#C9A227] hover:text-[#0D0D0D] font-semibold px-10 py-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 inline-flex items-center gap-3 w-full sm:w-auto sm:min-w-[240px] justify-center"
        style="font-family: 'Poppins', sans-serif;"
      >
        <Icon name="tabler:arrow-right" class="w-6 h-6 group-hover:translate-x-1 transition-transform duration-300" />
        <span>{t('hero.ctaSecondary')}</span>
      </a>
    </div>

    <!-- Trust Indicators: Quick stats for credibility -->
    <div class="mt-16 pt-12 border-t border-[#C9A227]/20 animate-fade-in" style="animation-delay: 0.7s;">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-[#C9A227] mb-2" style="font-family: 'Poppins', sans-serif;">200+</div>
          <div class="text-sm text-[#D1D1D1]">{t('hero.stat1')}</div>
        </div>

        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-[#C9A227] mb-2" style="font-family: 'Poppins', sans-serif;">60+</div>
          <div class="text-sm text-[#D1D1D1]">{t('hero.stat2')}</div>
        </div>

        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-[#C9A227] mb-2" style="font-family: 'Poppins', sans-serif;">26+</div>
          <div class="text-sm text-[#D1D1D1]">{t('hero.stat3')}</div>
        </div>

        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-[#C9A227] mb-2" style="font-family: 'Poppins', sans-serif;">8.5%</div>
          <div class="text-sm text-[#D1D1D1]">{t('hero.stat4')}</div>
        </div>

      </div>
    </div>

  </div>

</section>

<!-- Custom Animations: Tailwind-based entrance effects -->
<style>
  /* Fade in animation for subtle elements */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Slide up animation for main content */
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Gradient animation for headline accent */
  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-gradient {
    animation: gradient 8s ease infinite;
  }

  /* Utility classes for gradient buttons */
  .bg-size-200 {
    background-size: 200% 200%;
  }

  .bg-pos-100 {
    background-position: 100% 50%;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
