---
// Profit Management Consulting Process Component
import { Icon } from 'astro-icon/components';

interface Item {
  title?: string;
  description?: string;
  icon?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  items?: Array<Item>;
  classes?: Record<string, string>;
  id?: string;
}

const {
  title = "Our Consulting Process",
  subtitle = "Professional engagement in 4 strategic phases",
  tagline = "How We Work",
  items = [
    {
      title: "Discovery & Assessment",
      description: "Our expert consultants analyze your financial performance and identify key profit optimization opportunities tailored to your industry.",
      icon: "tabler:search"
    },
    {
      title: "Strategic Planning", 
      description: "Comprehensive analysis and development of customized strategies to address your specific profitability challenges and goals.",
      icon: "tabler:strategy"
    },
    {
      title: "Implementation Support",
      description: "Hands-on guidance and support during the implementation of profit management solutions and process improvements.",
      icon: "tabler:settings"
    },
    {
      title: "Performance Monitoring",
      description: "Ongoing measurement and optimization to ensure sustainable profit growth and long-term success of implemented strategies.",
      icon: "tabler:chart-line"
    }
  ],
  classes = {},
  id
} = Astro.props;

---

<section id={id} class="bg-finance-ivory py-20 md:py-28">
  <div class="max-w-6xl mx-auto px-6 text-center space-y-12">
    <h2 class="text-3xl md:text-4xl font-bold text-finance-charcoal font-heading tracking-wide">
      {title}
    </h2>
    <p class="text-lg text-text-body max-w-3xl mx-auto leading-relaxed">
      {subtitle}
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-10 mt-16 text-left">
      
      {items.map((item, index) => (
        <div class="space-y-3">
          <div class="w-12 h-12 flex items-center justify-center">
            <Icon name={item.icon} class="w-8 h-8 text-finance-gold stroke-[1.5]" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-finance-charcoal font-heading">{item.title}</h3>
          <p class="text-text-body font-body leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>

    <div class="mt-14">
      <a href="/contact" class="inline-block bg-finance-gold text-finance-charcoal px-8 py-3 rounded-full font-semibold hover:bg-finance-gold-hover transition-all duration-300 shadow-finance hover:shadow-finance-md">
        Start Your Consultation
      </a>
    </div>
  </div>
</section>
