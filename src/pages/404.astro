---
import Layout from '~/layouts/PageLayout.astro';
import { createMetadata } from '~/utils/metadata';
import { Icon } from 'astro-icon/components';

const metadata = createMetadata({
  title: 'Page Not Found - 404',
  description: 'The page you are looking for could not be found. Return to Profit Management Consulting & Training homepage.',
  canonical: '/404',
  noindex: true,
});
---

<Layout metadata={metadata}>
  <section class="relative min-h-screen bg-gradient-to-br from-profit-navy via-profit-navy to-blue-900 text-white flex items-center justify-center py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      
      <!-- Professional Accent -->
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-1 h-16 bg-profit-gold"></div>
        <div class="w-3 h-3 bg-profit-gold rounded-full"></div>
        <div class="w-1 h-16 bg-profit-gold"></div>
      </div>

      <!-- 404 Number -->
      <h1 class="text-8xl md:text-9xl font-bold text-profit-gold mb-8 tracking-wider font-heading">
        404
      </h1>

      <!-- Error Message -->
      <h2 class="text-2xl md:text-3xl font-semibold text-white mb-6 font-heading">
        Page Not Found
      </h2>
      
      <p class="text-lg md:text-xl text-white/80 mb-8 max-w-2xl mx-auto leading-relaxed font-body">
        The page you're looking for has moved or doesn't exist. 
        <br class="hidden md:inline">
        Let us help you find what you need to grow your profits.
      </p>

      <!-- Gold Divider -->
      <div class="flex items-center justify-center py-6 mb-8">
        <div class="h-px bg-gradient-to-r from-transparent via-profit-gold to-transparent w-32"></div>
        <div class="w-2 h-2 bg-profit-gold rounded-full mx-4"></div>
        <div class="h-px bg-gradient-to-r from-transparent via-profit-gold to-transparent w-32"></div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a 
          href="/" 
          class="inline-flex items-center gap-2 bg-profit-gold hover:bg-profit-gold/90 text-black px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          <Icon name="tabler:home" class="w-5 h-5" />
          Back to Home
        </a>
        
        <a 
          href="/services" 
          class="inline-flex items-center gap-2 bg-transparent border border-profit-gold text-profit-gold hover:bg-profit-gold hover:text-black px-8 py-4 rounded-full font-medium text-lg transition-all duration-300"
        >
          <Icon name="tabler:briefcase" class="w-5 h-5" />
          Our Services
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
        <a href="/services" class="text-white/80 hover:text-profit-gold transition-colors duration-300 text-sm font-body">
          Services
        </a>
        <a href="/about" class="text-white/80 hover:text-profit-gold transition-colors duration-300 text-sm font-body">
          About Us
        </a>
        <a href="/industries" class="text-white/80 hover:text-profit-gold transition-colors duration-300 text-sm font-body">
          Industries
        </a>
        <a href="/contact" class="text-white/80 hover:text-profit-gold transition-colors duration-300 text-sm font-body">
          Contact
        </a>
      </div>

      <!-- Profit Management Branding -->
      <div class="mt-16 pt-8 border-t border-profit-gold/20">
        <p class="text-profit-gold font-semibold text-lg font-heading">
          Profit Management Consulting & Training
        </p>
        <p class="text-white/70 text-sm mt-2 font-body">
          Profit as Precision
        </p>
      </div>
    </div>
  </section>
</Layout>
