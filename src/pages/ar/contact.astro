<script>
  function initializeArContactAccordion() {
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    // Remove existing event listeners to prevent duplicates
    accordionHeaders.forEach(header => {
      const newHeader = header.cloneNode(true);
      header.parentNode.replaceChild(newHeader, header);
    });
    
    // Re-select headers after cloning
    const newHeaders = document.querySelectorAll('.accordion-header');
    
    newHeaders.forEach(header => {
      header.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const targetId = this.getAttribute('data-accordion-target');
        if (!targetId) return;
        
        const content = document.getElementById(targetId);
        const icon = this.querySelector('.accordion-icon svg');
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        
        if (!content) {
          console.warn('Arabic contact accordion content not found:', targetId);
          return;
        }
        
        // Close all other accordion items
        newHeaders.forEach(otherHeader => {
          if (otherHeader !== this) {
            const otherTargetId = otherHeader.getAttribute('data-accordion-target');
            if (!otherTargetId) return;
            
            const otherContent = document.getElementById(otherTargetId);
            const otherIcon = otherHeader.querySelector('.accordion-icon svg');
            
            if (otherContent) {
              otherHeader.setAttribute('aria-expanded', 'false');
              otherContent.classList.remove('expanded');
              otherContent.style.maxHeight = '0px';
            }
            
            if (otherIcon) {
              otherIcon.style.transform = 'rotate(0deg)';
            }
          }
        });
        
        // Toggle current accordion item
        if (isExpanded) {
          this.setAttribute('aria-expanded', 'false');
          content.classList.remove('expanded');
          content.style.maxHeight = '0px';
          
          if (icon) {
            icon.style.transform = 'rotate(0deg)';
          }
        } else {
          this.setAttribute('aria-expanded', 'true');
          content.classList.add('expanded');
          
          // Force reflow before setting height
          content.offsetHeight;
          content.style.maxHeight = content.scrollHeight + 'px';
          
          if (icon) {
            icon.style.transform = 'rotate(180deg)';
          }
        }
      });
    });
  }
  
  // Multiple initialization attempts to handle timing issues
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeArContactAccordion);
  } else {
    initializeArContactAccordion();
  }
  
  window.addEventListener('load', () => {
    setTimeout(initializeArContactAccordion, 100);
  });
  
  document.addEventListener('astro:page-load', initializeArContactAccordion);
  
  // Form submission handling
  function initializeArFormHandling() {
    const form = document.querySelector('form[action*="formspree"]');
    const submitButton = form?.querySelector('button[type="submit"]');
    const buttonText = submitButton?.querySelector('span');
    const successMessage = document.getElementById('form-success-message');
    
    if (form && submitButton && buttonText) {
      const originalText = buttonText.textContent;
      
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Show loading state
        submitButton.disabled = true;
        submitButton.classList.add('opacity-75', 'cursor-not-allowed');
        buttonText.textContent = 'جاري الإرسال...';
        
        try {
          // Submit form data to Formspree
          const formData = new FormData(form);
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            // Show success message
            if (successMessage) {
              successMessage.classList.remove('hidden');
              successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
            
            // Reset form
            form.reset();
            
            // Hide success message after 10 seconds
            setTimeout(() => {
              if (successMessage) {
                successMessage.classList.add('hidden');
              }
            }, 10000);
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          console.error('Form submission error:', error);
          alert('حدث خطأ في إرسال رسالتك. يرجى المحاولة مرة أخرى.');
        } finally {
          // Reset button state
          submitButton.disabled = false;
          submitButton.classList.remove('opacity-75', 'cursor-not-allowed');
          buttonText.textContent = originalText;
        }
      });
    }
  }
  
  // Initialize form handling
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeArFormHandling);
  } else {
    initializeArFormHandling();
  }
</script>
