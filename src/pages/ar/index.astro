---
import RTLLayout from '~/layouts/RTLLayout.astro';
import Features from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import { useTranslations } from '~/utils/i18n';

const t = useTranslations('ar');

const metadata = {
  title: 'إدارة الربح للاستشارات والتدريب | الربح كدقة',
  description: 'شركة استشارية مصرية متخصصة في إدارة الربحية والتدريب. بقيادة الدكتور محمد عمرية، رائد إدارة الربح في الشرق الأوسط.',
  canonical: '/ar',
};
---

<RTLLayout metadata={metadata}>

  <!-- About Snapshot -->
  <Content
    tagline={t('home.tagline')}
    title={t('home.title')}
    classes={{
      container: 'pt-20',
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold'
    }}
  >
    <Fragment slot="content">
      <p class="text-profit-text font-body text-lg mb-6 leading-relaxed">
        {t('home.description')}
      </p>
      <div class="border-t border-profit-gold w-16 mb-6"></div>
      <p class="text-profit-text font-body leading-relaxed">
        {t('home.subtitle')}
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Core Services Overview -->
  <Features
    id="services"
    tagline={t('common.ourServices')}
    title={t('home.servicesTitle')}
    subtitle={t('home.servicesSubtitle')}
    columns={3}
    isDark={false}
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: t('services.profitGrowth'),
        description: 'تحليل استراتيجي للربحية وتطوير القيادات لتحديد الفرص عالية الهامش وتحسين الأداء المالي عبر جميع وظائف الأعمال.',
        icon: 'tabler:trending-up',
      },
      {
        title: t('services.transformation'),
        description: 'برامج التميز التشغيلي والتحول الرقمي لتحسين الكفاءة وخفض التكاليف وتعزيز القدرة التنافسية.',
        icon: 'tabler:refresh',
      },
      {
        title: t('services.decisionSupport'),
        description: 'رؤى مدفوعة بالبيانات ونمذجة مالية متقدمة لدعم القرارات الاستراتيجية والتخطيط طويل المدى.',
        icon: 'tabler:target',
      },
      {
        title: t('services.training'),
        description: 'برامج تدريبية متخصصة لبناء القدرات الداخلية في إدارة الربحية والتحليل المالي والقيادة الاستراتيجية.',
        icon: 'tabler:school',
      },
      {
        title: 'تحليل الأداء المالي',
        description: 'تقييم شامل للأداء المالي وتحديد مجالات التحسين وفرص زيادة الربحية والكفاءة التشغيلية.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'الاستشارات الإدارية',
        description: 'حلول استشارية متكاملة لتطوير الاستراتيجيات وتحسين العمليات وإدارة المخاطر وتعزيز الحوكمة المؤسسية.',
        icon: 'tabler:users',
      },
      {
        title: 'التدريب المتخصص',
        description: 'برامج تدريبية متقدمة في الإدارة المالية وتحليل الربحية.',
        icon: 'tabler:school',
      },
      {
        title: 'دراسات الجدوى',
        description: 'تقييم شامل للمشاريع الاستثمارية وتحليل العائد المتوقع.',
        icon: 'tabler:file-analytics',
      },
      {
        title: 'تكامل أنظمة ERP',
        description: 'تطبيق وتكامل أنظمة تخطيط موارد المؤسسة لتحسين الكفاءة.',
        icon: 'tabler:network',
      },
      {
        title: 'الاستشارات الرقمية',
        description: 'تحويل رقمي للعمليات المالية وتطوير حلول تقنية مبتكرة.',
        icon: 'tabler:device-desktop',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        text: 'ابدأ رحلتك معنا',
        href: '/ar/contact',
        icon: 'tabler:arrow-left',
        class: 'bg-profit-gold text-profit-navy hover:bg-yellow-500 font-semibold px-8 py-4 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300',
      },
    ]}
  >
    <Fragment slot="title">
      جاهز لتحويل أعمالك؟
    </Fragment>

    <Fragment slot="subtitle">
      انضم إلى أكثر من 100 شركة حققت نموًا استثنائيًا في الربحية مع خبرتنا التي تمتد لأكثر من 26 عامًا.
    </Fragment>
  </CallToAction>
</RTLLayout>
