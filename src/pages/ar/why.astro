---
import RTLLayout from '~/layouts/RTLLayout.astro';
import Features from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';
import { useTranslations } from '~/utils/i18n';

const t = useTranslations('ar');

const metadata = {
  title: 'لماذا تختارنا - إدارة الربح للاستشارات والتدريب',
  description: 'اكتشف ما يميزنا: خبرة 26+ عامًا، أكثر من 60 قطاعًا، 200+ شركة، خبرة على مستوى الدكتوراه، معايير عالمية، ونتائج مثبتة.',
  canonical: '/ar/why',
};
---

<RTLLayout metadata={metadata}>

  <!-- Key Differentiators -->
  <Features
    title={t('why.title')}
    subtitle={t('why.subtitle')}
    columns={3}
    classes={{
      container: 'pt-20',
      title: 'text-profit-navy font-heading',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: t('why.experience'),
        description: 'بقيادة الدكتور محمد عمرية مع أكثر من عقدين من الخبرة العملية في إدارة الربح عبر الشرق الأوسط.',
        icon: 'tabler:calendar-stats',
      },
      {
        title: t('why.industries'),
        description: 'خبرة واسعة عبر قطاعات متنوعة من الصناعات الطبية إلى التكنولوجيا والعقارات والتصنيع.',
        icon: 'tabler:building',
      },
      {
        title: t('why.companies'),
        description: 'سجل حافل من النجاحات مع أكثر من 200 شركة حققت تحسينات ملموسة في الربحية والكفاءة.',
        icon: 'tabler:users',
      },
      {
        title: t('why.expertise'),
        description: 'فريق من حملة الدكتوراه والمحاسبين المعتمدين مع تدريب مستمر في أحدث المنهجيات.',
        icon: 'tabler:school',
      },
      {
        title: t('why.globalReach'),
        description: 'تطبيق أفضل الممارسات العالمية مع التعاون المستمر مع خبراء أمريكيين ومؤسسات دولية.',
        icon: 'tabler:world',
      },
      {
        title: t('why.provenResults'),
        description: 'منهجيات مثبتة تحقق نتائج قابلة للقياس في تحسين الربحية والكفاءة التشغيلية.',
        icon: 'tabler:chart-line',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </Features>

  <!-- Statistics -->
  <Stats
    title="أرقام تتحدث عن نفسها"
    subtitle="إنجازاتنا المحققة عبر أكثر من ربع قرن من الخبرة في الاستشارات المالية وإدارة الربحية."
    classes={{
      title: 'text-profit-navy font-heading',
      subtitle: 'text-profit-text font-body'
    }}
    stats={[
      { amount: '26+', title: 'سنة خبرة', icon: 'tabler:calendar' },
      { amount: '200+', title: 'شركة عميلة', icon: 'tabler:building' },
      { amount: '60+', title: 'قطاع صناعي', icon: 'tabler:chart-pie' },
      { amount: '95%', title: 'معدل رضا العملاء', icon: 'tabler:heart' },
    ]}
  />

  <!-- Our Approach -->
  <Content
    title="منهجيتنا المتميزة"
    tagline="الربح كدقة"
    subtitle="نطبق 11 آلية أساسية - من مراقبة التكاليف إلى تكامل ERP - مبنية حول مبدأ واحد: الربح كدقة."
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: 'الدقة الأكاديمية',
        description: 'منهجيات قائمة على البحث تجمع بين الأطر النظرية واستراتيجيات التطبيق العملي.',
      },
      {
        title: 'التطبيق العملي',
        description: 'خبرة عملية عبر أكثر من 60 صناعة مع سجل مثبت من التحسينات القابلة للقياس في الربحية.',
      },
      {
        title: 'التميز الجماعي',
        description: 'فريق متعدد التخصصات من حملة الدكتوراه والمحاسبين المعتمدين والمتخصصين الصناعيين.',
      },
      {
        title: 'المعايير الدولية',
        description: 'تطبيق أفضل الممارسات العالمية مع التكيف مع البيئة المحلية والثقافة التنظيمية.',
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/our-approach.webp',
      alt: 'منهجيتنا في إدارة الربحية والاستشارات المالية',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Competitive Advantages -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-profit-navy font-heading mb-4">مزايانا التنافسية</h2>
        <p class="text-lg text-profit-text font-body max-w-3xl mx-auto leading-relaxed">
          العوامل التي تجعلنا الخيار الأمثل لشركتك في رحلة تحسين الربحية والنمو المستدام.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6 bg-gradient-to-br from-profit-light to-white rounded-xl border border-profit-gold/20">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-gold to-yellow-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="tabler:certificate" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">مؤهلات متقدمة</h3>
          <p class="text-profit-text font-body text-sm leading-relaxed">دكتوراه في المراجعة وكشف الاحتيال مع ماجستير في التكلفة المستهدفة.</p>
        </div>

        <div class="text-center p-6 bg-gradient-to-br from-profit-light to-white rounded-xl border border-profit-navy/20">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="tabler:globe" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">شراكات دولية</h3>
          <p class="text-profit-text font-body text-sm leading-relaxed">تعاون مستمر مع خبراء أمريكيين لضمان تطبيق أحدث المنهجيات العالمية.</p>
        </div>

        <div class="text-center p-6 bg-gradient-to-br from-profit-light to-white rounded-xl border border-profit-gold/20">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-gold to-yellow-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="tabler:target" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">نتائج مضمونة</h3>
          <p class="text-profit-text font-body text-sm leading-relaxed">التزام بتحقيق نتائج قابلة للقياس مع ضمانات على التحسينات المحققة.</p>
        </div>

        <div class="text-center p-6 bg-gradient-to-br from-profit-light to-white rounded-xl border border-profit-navy/20">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="tabler:clock" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">استجابة سريعة</h3>
          <p class="text-profit-text font-body text-sm leading-relaxed">فريق متاح على مدار الساعة لضمان الاستجابة السريعة لاحتياجات العملاء.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Client Testimonials -->
  <section class="py-20 bg-gradient-to-br from-profit-light to-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-profit-navy font-heading mb-4">شهادات العملاء</h2>
        <p class="text-lg text-profit-text font-body max-w-3xl mx-auto leading-relaxed">
          ما يقوله عملاؤنا عن تجربتهم معنا والنتائج المحققة.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-lg border border-profit-gold/20">
          <div class="mb-6">
            <div class="flex items-center gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <Icon name="tabler:star-filled" class="w-5 h-5 text-profit-gold" />
              ))}
            </div>
            <p class="text-profit-text font-body leading-relaxed mb-4">
              "تحسنت ربحيتنا بنسبة 40% خلال 6 أشهر فقط. الفريق محترف جداً ويفهم تحديات قطاعنا بعمق."
            </p>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-profit-navy rounded-full flex items-center justify-center">
              <span class="text-white font-bold">أ.م</span>
            </div>
            <div>
              <p class="font-semibold text-profit-navy">أحمد محمد</p>
              <p class="text-sm text-profit-text">المدير العام - شركة تصنيع</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-lg border border-profit-navy/20">
          <div class="mb-6">
            <div class="flex items-center gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <Icon name="tabler:star-filled" class="w-5 h-5 text-profit-gold" />
              ))}
            </div>
            <p class="text-profit-text font-body leading-relaxed mb-4">
              "الخبرة والاحترافية واضحة في كل تفصيل. ساعدونا في تطوير نظام إدارة مالية متطور."
            </p>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-profit-gold rounded-full flex items-center justify-center">
              <span class="text-white font-bold">س.ع</span>
            </div>
            <div>
              <p class="font-semibold text-profit-navy">سارة عبدالله</p>
              <p class="text-sm text-profit-text">المدير المالي - مستشفى خاص</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-lg border border-profit-gold/20">
          <div class="mb-6">
            <div class="flex items-center gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <Icon name="tabler:star-filled" class="w-5 h-5 text-profit-gold" />
              ))}
            </div>
            <p class="text-profit-text font-body leading-relaxed mb-4">
              "نصائحهم الاستراتيجية غيرت مسار شركتنا نحو الأفضل. أنصح بهم بشدة."
            </p>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-profit-navy rounded-full flex items-center justify-center">
              <span class="text-white font-bold">م.ح</span>
            </div>
            <div>
              <p class="font-semibold text-profit-navy">محمد حسن</p>
              <p class="text-sm text-profit-text">الرئيس التنفيذي - شركة تقنية</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <CallToAction
    title="جاهز لتجربة الفرق؟"
    subtitle="انضم إلى أكثر من 200 شركة اختارت خبرتنا لتحقيق أهدافها في النمو والربحية المستدامة."
    actions={[
      {
        variant: 'primary',
        text: 'ابدأ رحلتك معنا',
        href: '/ar/contact',
        class: 'bg-profit-gold hover:bg-profit-gold/90 text-black font-semibold px-8 py-3 text-lg',
      },
      {
        text: 'تعرف على خدماتنا',
        href: '/ar/services',
      },
    ]}
  />
</RTLLayout>
