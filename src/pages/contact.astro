---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.contact}>

  <!-- Contact Form Section -->
  <section id="contact-form" class="py-20 bg-gradient-to-br from-profit-light to-white">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-profit-navy font-heading mb-4">Get Started Today</h2>
        <p class="text-lg text-profit-text font-body max-w-2xl mx-auto">
          Tell us about your business challenges and goals. We'll respond within 24 hours with a customized consultation plan.
        </p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Full Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
                placeholder="Your full name"
              >
            </div>
            <div>
              <label for="company" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Company *</label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                required
                class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
                placeholder="Your company name"
              >
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
                placeholder="your@email.com"
              >
            </div>
            <div>
              <label for="phone" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Phone Number</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
                placeholder="+20 xxx xxx xxxx"
              >
            </div>
          </div>

          <div>
            <label for="industry" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Industry</label>
            <select 
              id="industry" 
              name="industry"
              class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
            >
              <option value="">Select your industry</option>
              <option value="medical">Medical & Pharmaceuticals</option>
              <option value="food">Food & Agriculture</option>
              <option value="manufacturing">Manufacturing & Engineering</option>
              <option value="real-estate">Real Estate</option>
              <option value="technology">Technology & Innovation</option>
              <option value="services">Service Industries</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="service" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Service Interest</label>
            <select 
              id="service" 
              name="service"
              class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors"
            >
              <option value="">Select service of interest</option>
              <option value="profit-growth">Corporate Profit Growth</option>
              <option value="transformation">Business Transformation</option>
              <option value="strategic-support">Strategic Decision Support</option>
              <option value="training">Training & Development</option>
              <option value="consultation">General Consultation</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold text-profit-navy font-heading mb-2">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              required
              class="w-full px-4 py-3 border border-profit-border rounded-lg focus:border-profit-gold focus:ring-2 focus:ring-profit-gold/20 focus:outline-none transition-colors resize-vertical"
              placeholder="Tell us about your business challenges, goals, and how we can help you achieve sustainable profit growth..."
            ></textarea>
          </div>

          <div class="text-center">
            <button 
              type="submit"
              class="bg-gradient-to-r from-profit-gold to-yellow-500 hover:from-yellow-500 hover:to-profit-gold text-black font-semibold px-8 py-4 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 inline-flex items-center gap-2"
            >
              <Icon name="tabler:send" class="w-5 h-5" />
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-profit-navy font-heading mb-4">Multiple Ways to Reach Us</h2>
        <p class="text-lg text-profit-text font-body max-w-2xl mx-auto">
          Choose the contact method that works best for you. We're here to help you achieve your profitability goals.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-profit-light p-8 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-gold to-yellow-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="tabler:briefcase" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">Consulting Inquiries</h3>
          <p class="text-profit-text font-body text-sm">Strategic consulting, profit optimization, and business transformation services.</p>
        </div>

        <div class="bg-profit-light p-8 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-900 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="tabler:school" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">Training Programs</h3>
          <p class="text-profit-text font-body text-sm">Professional development, financial training, and capability building programs.</p>
        </div>

        <div class="bg-profit-light p-8 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-gold to-yellow-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="tabler:mail" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">Email Support</h3>
          <p class="text-profit-navy font-body font-semibold mb-2">info@profitmanagement.com</p>
          <p class="text-profit-text font-body text-sm">Response within 24 hours</p>
        </div>

        <div class="bg-profit-light p-8 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-900 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="tabler:map-pin" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3">Head Office</h3>
          <p class="text-profit-navy font-body font-semibold mb-1">Profit Management Consulting & Training</p>
          <p class="text-profit-text font-body text-sm">Cairo, Egypt</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Contact Us -->
  <Content
    title="Why Start the Conversation?"
    tagline="Your Success Journey"
    subtitle="Every successful transformation begins with a conversation. Let us understand your challenges and show you how our proven methodologies can drive sustainable profit growth."
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: 'Free Initial Consultation',
        description: 'No-obligation discussion about your business challenges and potential solutions.',
      },
      {
        title: 'Customized Approach',
        description: 'Tailored recommendations based on your industry, company size, and specific needs.',
      },
      {
        title: 'Proven Track Record',
        description: 'Join 200+ companies across 60+ industries who have achieved measurable results.',
      },
      {
        title: 'Expert Guidance',
        description: '26+ years of experience with PhD-level expertise in profit management and business optimization.',
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/consultation-meeting.webp',
      alt: 'Professional business consultation and strategic planning session',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>
</Layout>
