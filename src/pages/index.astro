---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';

import Features from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import AccordionFAQ from '~/components/widgets/AccordionFAQ.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
---

<Layout metadata={PAGE_METADATA.home}>

  <!-- About Snapshot *************** -->
  
  <Content
    tagline="About Us"
    title="Profit Management Consulting & Training"
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold'
    }}
  >
    <Fragment slot="content">
      <p class="text-profit-text font-body text-lg mb-6">
        Profit Management Consulting & Training is an Egyptian consulting firm specialized in profitability management and training. Led by <strong>Dr. Mohamed Amria</strong>, a pioneer in profit management across the Middle East, the company empowers organizations to enhance margins, improve efficiency, and achieve long-term success.
      </p>
      <div class="border-t border-profit-gold w-16 mb-6"></div>
      <p class="text-profit-text font-body">
        We combine global consulting standards with local insight to deliver measurable, sustainable profit growth.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Core Services Overview ******* -->

  <Features
    id="services"
    tagline="Our Services"
    title="Core Services Overview"
    subtitle="Comprehensive consulting and training services covering every dimension of corporate profitabilityâ€”linking finance, operations, and strategy."
    columns={3}
    isDark={false}
    classes={{
      title: 'text-profit-navy font-heading',
      subtitle: 'text-profit-text font-body font-medium'
    }}
    items={[
      {
        title: 'Corporate Profitability Leadership',
        description:
          'Strategic profitability analysis and leadership development to identify high-margin opportunities and optimize financial performance.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Cost Management',
        description:
          'Advanced cost control systems and target costing methodologies to eliminate inefficiencies and maximize operational margins.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Budget Development & Management',
        description:
          'Comprehensive budget planning, control systems, and performance monitoring aligned with strategic business objectives.',
        icon: 'tabler:chart-pie',
      },
      {
        title: 'Feasibility Studies',
        description:
          'In-depth investment analysis with ROI modeling and risk assessment to support strategic decision-making processes.',
        icon: 'tabler:search',
      },
      {
        title: 'ERP Integration',
        description:
          'Complete enterprise resource planning implementation connecting financial systems with operational workflows.',
        icon: 'tabler:settings',
      },
      {
        title: 'Training & Development',
        description:
          'Professional development programs building internal financial expertise and profit management capabilities.',
        icon: 'tabler:school',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </Features>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Industries"
    title="Industries Served"
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold'
    }}
    items={[
      {
        title: 'Medical Industries',
        description:
          'Specialized consulting for pharmaceutical and healthcare companies including Hikma Pharma, EUP Pharma, and UPM Pharmaceuticals.',
      },
      {
        title: 'Food & Agriculture',
        description:
          'Comprehensive profitability solutions for food processing and agricultural businesses like El Hegen Egypt, Donia Sweets, and Alam Farms.',
      },
      {
        title: 'Manufacturing & Engineering',
        description:
          'Advanced cost management and operational efficiency for manufacturing companies including MISR El HEGAZ Group and AGAMY Metal Industries.',
      },
      {
        title: 'Real Estate',
        description:
          'Strategic financial planning and investment analysis for real estate development projects and property management companies.',
      },
      {
        title: 'Other Industries',
        description:
          'Diverse expertise across 60+ industries including Clean Egg, Penta Studio, and various service sector organizations.',
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/industries-consulting.webp',
      alt: 'Business consulting across multiple industries',
      width: 500,
      height: 400,
    }}
  >
    <Fragment slot="content">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-profit-navy font-heading mb-4">60+ Industries Served</h2>
      <p class="text-profit-text font-body font-medium">
        We have guided profitability projects across diverse industrial and service sectors, demonstrating our ability to transform operations into measurable profit growth.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="Why Choose Us"
    title="Why Profit Management?"
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold'
    }}
    items={[
      {
        title: 'Rising Revenues, Shrinking Margins',
        description: 'We diagnose the root causes when your business faces increasing sales but declining profitability, implementing targeted solutions.',
      },
      {
        title: 'Real-Time Financial Intelligence',
        description:
          'Transform your decision-making with comprehensive financial data systems that provide actionable insights when you need them most.',
      },
      {
        title: 'Operational Cost Optimization',
        description:
          'Eliminate inefficiencies and reduce operational costs while maintaining quality and service standards across your organization.',
      },
      {
        title: 'Strategic ROI Analysis',
        description:
          'Clear visibility into project returns and marketing spend effectiveness with detailed ROI modeling and performance tracking.',
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/profit-analysis.webp',
      alt: 'Financial analysis and profit optimization consulting',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="content">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-profit-navy font-heading mb-4">Profit as Precision</h2>
      <p class="text-profit-text font-body font-medium">
        We are the partner of choice when your business needs measurable profit growth through data-driven solutions and sustained capability building.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gray-50"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Data-Driven Solutions',
        description:
          'We diagnose root causes and implement evidence-based solutions that deliver measurable results, not temporary fixes.',
      },
      {
        title: 'Global Standards, Local Insight',
        description:
          'Every engagement combines international best practices with deep understanding of regional market dynamics and business culture.',
      },
      {
        title: 'Sustainable Capability Building',
        description:
          'Build internal expertise and systems so profitability becomes a sustained competitive advantage, not a one-time improvement.',
      },
      {
        title: 'Proven Track Record',
        description: `26 years of experience across 60+ industries with measurable profit improvements and long-term client partnerships.`,
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/consulting-team.webp',
      alt: 'Professional consulting team analyzing business performance',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="content">
      <p class="text-profit-text font-body font-medium text-lg">
        Engineered for business excellence and lasting profitability growth.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Experience Profit Growth in Three Strategic Steps"
    isDark={false}
    classes={{
      title: 'text-profit-navy font-heading'
    }}
    items={[
      {
        title: 'Step 1: <span class="font-medium">Strategic Assessment</span>',
        description:
          "Connect with our profit management experts for a comprehensive business analysis. We assess your financial performance, identify profit leakage, and recommend targeted solutions tailored to your industry and operational model.",
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Implementation & Training</span>',
        description:
          "Watch our certified consultants implement proven profit management systems with precision. Using advanced methodologies and data-driven approaches, we ensure sustainable improvements and knowledge transfer.",
        icon: 'tabler:settings',
      },
      {
        title: 'Step 3: <span class="font-medium">Sustained Growth</span>',
        description:
          'Operate with confidence knowing your profitability systems are optimized and your team is equipped with advanced financial management capabilities. Your business maintains competitive advantage for years to come.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Profitable!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '/images/consulting-process.webp',
      alt: 'Profit management consulting process steps',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </Steps>


  <!-- FAQs Widget ******************* -->

  <AccordionFAQ
    title="Frequently Asked Questions"
    subtitle="Common questions about our profit management consulting and training services."
    tagline="FAQs"
    isDark={false}
    classes={{ 
      container: 'max-w-6xl',
      title: 'text-profit-navy font-heading',
      subtitle: 'text-profit-text font-body font-medium',
      tagline: 'text-profit-gold'
    }}
    items={[
      {
        title: 'What makes Profit Management different from other consulting firms?',
        description:
          "We combine 26 years of hands-on industry experience with advanced profit management methodologies. Our approach focuses on sustainable capability building, not just temporary improvements. Dr. Mohamed Amria's expertise spans 60+ industries with proven results in both academic research and practical implementation.",
      },
      {
        title: 'How long does a typical consulting engagement take?',
        description:
          'Consulting engagements typically range from 3-12 months depending on project scope and organizational complexity. We use phased approaches with measurable milestones, ensuring you see results early while building long-term capabilities. Training programs can be delivered in intensive workshops or extended development cycles.',
      },
      {
        title: 'Will consulting disrupt our daily operations?',
        description:
          "No. Our methodologies are designed for seamless integration with existing operations. We work alongside your team to implement improvements without disrupting critical business functions. Our approach emphasizes knowledge transfer so your team becomes self-sufficient in profit management.",
      },
      {
        title: 'What results can we expect from your services?',
        description:
          "Clients typically see 15-30% improvement in profit margins within the first year. Results include enhanced cost control, improved operational efficiency, better financial decision-making capabilities, and sustainable profit growth systems. We provide detailed ROI analysis and performance tracking throughout the engagement.",
      },
      {
        title: 'Do you work with companies in our industry?',
        description:
          "Yes! We have successfully served clients across 60+ industries including medical, food & agriculture, manufacturing, real estate, and engineering sectors. Our proven methodologies adapt to any industry while leveraging sector-specific insights and best practices.",
      },
      {
        title: 'How do we maintain improvements after the engagement ends?',
        description:
          "Sustainability is core to our approach. We build internal capabilities through comprehensive training, establish robust systems and processes, and provide ongoing support during transition periods. Your team will have the tools and knowledge to continue driving profit improvements independently.",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </AccordionFAQ>

  <!-- Stats Widget ****************** -->

  <Stats
    isDark={false}
    stats={[
      { title: 'Companies Served', amount: '200+' },
      { title: 'Industries Covered', amount: '60+' },
      { title: 'Years Experience', amount: '26+' },
      { title: 'Average Profit Increase', amount: '25%' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </Stats>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book a Consultation',
        href: '/contact',
        icon: 'tabler:calendar',
        class: 'bg-profit-gold hover:bg-profit-gold/90 text-black font-semibold px-8 py-3 text-lg',
      },
      {
        text: 'Explore Services',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Design Your Profitability Roadmap
    </Fragment>

    <Fragment slot="subtitle">
      Join hundreds of successful companies who trust Profit Management for sustainable growth. <br class="hidden md:inline" />Get started with a strategic consultation today.
    </Fragment>
  </CallToAction>
</Layout>
