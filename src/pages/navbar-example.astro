---
import Layout from '~/layouts/Layout.astro';
import Navbar from '~/components/Navbar.astro';

// Get current path for active link highlighting
const currentPath = new URL(Astro.request.url).pathname;

const metadata = {
  title: 'Navbar Example - Profit Management',
  description: 'Example page demonstrating the responsive navbar component'
};
---

<Layout metadata={metadata}>
  <Navbar currentPath={currentPath} />
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold text-[#0D3B66] mb-6">
        Navbar Component Example
      </h1>
      
      <p class="text-lg text-gray-700 mb-8">
        This page demonstrates the fully responsive, sticky navbar component with Flowbite integration.
      </p>

      <div class="bg-white p-8 rounded-lg shadow-lg border border-[#E9D8A6]/40">
        <h2 class="text-2xl font-semibold text-[#0D3B66] mb-4">Features Included:</h2>
        
        <ul class="text-left space-y-3 text-gray-700">
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Sticky positioning with gradient animation
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Services dropdown with detailed descriptions
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Language switcher (EN/AR)
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Responsive mobile menu with hamburger toggle
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Flowbite integration for interactive elements
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-[#C9A227] rounded-full mr-3"></span>
            Premium design with blur effects and shadows
          </li>
        </ul>
      </div>

      <div class="mt-12 space-y-4">
        <h3 class="text-xl font-semibold text-[#0D3B66]">Test the Navigation:</h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/" class="px-6 py-3 bg-[#C9A227] text-white rounded-lg hover:bg-[#B8911F] transition-all duration-300">
            Home
          </a>
          <a href="/about" class="px-6 py-3 bg-[#0D3B66] text-white rounded-lg hover:bg-[#0A2B4F] transition-all duration-300">
            About
          </a>
          <a href="/services" class="px-6 py-3 bg-[#C9A227] text-white rounded-lg hover:bg-[#B8911F] transition-all duration-300">
            Services
          </a>
          <a href="/contact" class="px-6 py-3 bg-[#0D3B66] text-white rounded-lg hover:bg-[#0A2B4F] transition-all duration-300">
            Contact
          </a>
        </div>
      </div>

      <!-- Scroll content to test sticky behavior -->
      <div class="mt-20 space-y-8">
        <div class="h-96 bg-gradient-to-br from-[#faedc6] to-white rounded-lg flex items-center justify-center">
          <p class="text-[#0D3B66] text-xl font-medium">Scroll to test sticky navbar behavior</p>
        </div>
        <div class="h-96 bg-gradient-to-br from-white to-[#faedc6] rounded-lg flex items-center justify-center">
          <p class="text-[#0D3B66] text-xl font-medium">The navbar should remain fixed at the top</p>
        </div>
        <div class="h-96 bg-gradient-to-br from-[#faedc6] to-white rounded-lg flex items-center justify-center">
          <p class="text-[#0D3B66] text-xl font-medium">With smooth gradient animation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Add Flowbite JavaScript -->
  <script>
    import 'flowbite';
  </script>
</Layout>
