---
import Layout from '~/layouts/PageLayout.astro';
import Features from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.about}>

  <!-- Mission & Goals -->
  <Features
    id="mission"
    title="Mission & Goals"
    subtitle="We aim to help organizations achieve sustainable profitability and operational excellence"
    columns={3}
    classes={{
      title: 'text-profit-navy font-heading',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: 'Increase Efficiency',
        description: 'Optimize operational processes and eliminate waste to maximize profitability across all business functions.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Data-Driven Solutions',
        description: 'Provide practical, evidence-based recommendations that deliver measurable and sustainable results.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Strategic Guidance',
        description: 'Support strategic decisions and long-term planning with comprehensive financial analysis and market insights.',
        icon: 'tabler:target',
      },
      {
        title: 'Innovation Support',
        description: 'Guide digital transformation initiatives and technology adoption to enhance competitive advantage.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Leadership Development',
        description: 'Develop consultants and finance leaders with advanced profit management capabilities and methodologies.',
        icon: 'tabler:school',
      },
      {
        title: 'Sustainable Growth',
        description: 'Build internal capabilities that ensure long-term profitability and operational excellence.',
        icon: 'tabler:plant',
      },
    ]}
  />

  <!-- Company Story - COMMENTED OUT FOR FUTURE USE -->
