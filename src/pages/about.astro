---
import Layout from '~/layouts/PageLayout.astro';
import Features from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.about}>

  <!-- Leadership -->
  <section class="relative pt-32 pb-24 bg-gradient-to-br from-blue-50 via-white to-amber-50 ">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-5"></div>
    <div class="absolute top-10 right-10 w-96 h-96 bg-gradient-to-r from-[#C9A227]/20 to-transparent rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 left-10 w-80 h-80 bg-gradient-to-l from-profit-navy/10 to-transparent rounded-full blur-3xl animate-pulse delay-1000"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <h1 class="text-5xl md:text-6xl font-bold text-profit-navy font-heading mb-8 leading-tight">
          Leadership <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] to-amber-600">Excellence</span>
        </h1>
        <p class="text-2xl text-profit-text font-body max-w-4xl mx-auto leading-relaxed">
          Led by Dr. Mohamed Amria, a pioneer in profit management across the Middle East with 26+ years of hands-on industry experience.
        </p>
      </div>

      <!-- Dr. Mohamed Amria Profile -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12 border border-white/30">
          <div class="grid md:grid-cols-3 gap-8 items-center">
            <div class="md:col-span-1">
              <div class="w-48 h-56 mx-auto rounded-xl overflow-hidden shadow-lg">
                <img 
                  src="/images/team/Dr_mohame_amria.png" 
                  alt="Dr. Mohamed Amria - Founder & Managing Director"
                  class="w-full h-full object-cover object-top"
                  loading="lazy"
                />
              </div>
            </div>
            <div class="md:col-span-2">
              <h3 class="text-2xl md:text-3xl font-bold text-profit-navy font-heading mb-2">Dr. Mohamed Amria</h3>
              <p class="text-profit-gold font-semibold text-lg mb-4">Founder & Managing Director</p>
              <p class="text-profit-text font-body mb-6">
                PhD in Auditing & Fraud Detection from Ain Shams University, MSc in Target Costing & Integrated Statistical Models. 
                Over 26 years in profitability management across industrial and service sectors throughout the Middle East.
              </p>
              
              <div class="grid md:grid-cols-2 gap-4 mb-6">
                <div class="bg-gradient-to-br from-blue-50 to-white p-6 rounded-2xl border border-white/30 shadow-lg">
                  <h4 class="font-bold text-profit-navy font-heading mb-3 text-lg">Academic Excellence</h4>
                  <ul class="text-sm text-profit-text font-body space-y-1">
                    <li>• PhD Auditing & Fraud Detection</li>
                    <li>• MSc Target Costing</li>
                    <li>• Statistical Models Expert</li>
                  </ul>
                </div>
                <div class="bg-gradient-to-br from-amber-50 to-white p-6 rounded-2xl border border-white/30 shadow-lg">
                  <h4 class="font-bold text-profit-navy font-heading mb-3 text-lg">Industry Impact</h4>
                  <ul class="text-sm text-profit-text font-body space-y-1">
                    <li>• 60+ Industries Served</li>
                    <li>• 200+ Companies Guided</li>
                    <li>• Middle East Leadership</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Expertise -->
  <section class="relative py-24 bg-gradient-to-b from-white via-blue-50/30 to-white ">
    <div class="absolute top-0 right-1/4 w-64 h-64 bg-gradient-to-r from-[#C9A227]/10 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 w-80 h-80 bg-gradient-to-l from-profit-navy/10 to-transparent rounded-full blur-3xl"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold text-profit-navy font-heading mb-6 leading-tight">
          Our Team <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] to-amber-600">Expertise</span>
        </h2>
        <p class="text-xl text-profit-text font-body max-w-4xl mx-auto leading-relaxed">
          Multidisciplinary professionals with specialized knowledge across finance, operations, and strategic management.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- PhD Holders -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:school" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">PhD Holders</h3>
          <p class="text-profit-text font-body leading-relaxed">Advanced academic credentials in accounting, finance, auditing, and business management from leading universities.</p>
        </div>

        <!-- Certified Accountants -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:certificate" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">Certified Accountants</h3>
          <p class="text-profit-text font-body leading-relaxed">Professional certifications and ongoing education in accounting standards, financial analysis, and regulatory compliance.</p>
        </div>

        <!-- Industry Specialists -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:building" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">Industry Specialists</h3>
          <p class="text-profit-text font-body leading-relaxed">Deep sector expertise across manufacturing, healthcare, food processing, real estate, and service industries.</p>
        </div>

        <!-- ERP Consultants -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:settings" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">ERP Consultants</h3>
          <p class="text-profit-text font-body leading-relaxed">Technical expertise in enterprise resource planning systems, digital transformation, and process automation.</p>
        </div>

        <!-- Financial Analysts -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:chart-line" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">Financial Analysts</h3>
          <p class="text-profit-text font-body leading-relaxed">Advanced skills in financial modeling, cost analysis, budget planning, and performance measurement systems.</p>
        </div>

        <!-- Training Specialists -->
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:users" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-xl font-bold text-profit-navy font-heading mb-4 group-hover:text-[#C9A227] transition-colors duration-300">Training Specialists</h3>
          <p class="text-profit-text font-body leading-relaxed">Professional development experts who build internal capabilities and transfer knowledge effectively.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Global Collaboration -->
  <Content
    title="Global Standards, Local Insight"
    tagline="International Excellence"
    subtitle="Our team collaborates with U.S. experts to ensure global best practices while maintaining deep understanding of regional market dynamics and business culture."
    classes={{
      title: 'text-profit-navy font-heading',
      tagline: 'text-profit-gold',
      subtitle: 'text-profit-text font-body'
    }}
    items={[
      {
        title: 'U.S. Expert Network',
        description: 'Regular collaboration with American consulting professionals and academic institutions for knowledge exchange.',
      },
      {
        title: 'International Standards',
        description: 'Implementation of global best practices in financial management, auditing, and business process optimization.',
      },
      {
        title: 'Continuous Learning',
        description: 'Ongoing professional development through international conferences, certifications, and research partnerships.',
      },
      {
        title: 'Cultural Adaptation',
        description: 'Ability to adapt global methodologies to local business cultures and regulatory environments.',
      },
    ]}
    classes={{
      items: {
        title: 'text-profit-navy font-semibold',
        description: 'text-profit-text font-body'
      }
    }}
    image={{
      src: '/images/global-collaboration.webp',
      alt: 'International collaboration and knowledge sharing in consulting',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-profit-light"></div>
    </Fragment>
  </Content>

  <!-- Team Values -->
  <section class="relative py-24 bg-gradient-to-br from-blue-50 via-white to-amber-50 ">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-5"></div>
    <div class="absolute top-10 right-10 w-96 h-96 bg-gradient-to-r from-[#C9A227]/20 to-transparent rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 left-10 w-80 h-80 bg-gradient-to-l from-profit-navy/10 to-transparent rounded-full blur-3xl animate-pulse delay-1000"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold text-profit-navy font-heading mb-6 leading-tight">
          Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] to-amber-600">Values</span>
        </h2>
        <p class="text-xl text-profit-text font-body max-w-4xl mx-auto leading-relaxed">
          The principles that guide our work and define our commitment to client success and professional excellence.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 text-center transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:target" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3 group-hover:text-[#C9A227] transition-colors duration-300">Precision</h3>
          <p class="text-profit-text font-body leading-relaxed">Every analysis, recommendation, and implementation is executed with meticulous attention to detail.</p>
        </div>

        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 text-center transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:shield-check" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3 group-hover:text-[#C9A227] transition-colors duration-300">Integrity</h3>
          <p class="text-profit-text font-body leading-relaxed">Honest, transparent communication and ethical business practices in all client relationships.</p>
        </div>

        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 text-center transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:bulb" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3 group-hover:text-[#C9A227] transition-colors duration-300">Innovation</h3>
          <p class="text-profit-text font-body leading-relaxed">Continuous improvement of methodologies and adoption of new technologies for better results.</p>
        </div>

        <div class="group relative bg-white p-8 rounded-3xl shadow-2xl hover:shadow-3xl border border-white/30 text-center transition-all duration-500 hover:scale-105 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-profit-navy to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg">
            <Icon name="tabler:users" class="w-8 h-8 text-white stroke-[1.5]" />
          </div>
          <h3 class="text-lg font-bold text-profit-navy font-heading mb-3 group-hover:text-[#C9A227] transition-colors duration-300">Partnership</h3>
          <p class="text-profit-text font-body leading-relaxed">Long-term collaborative relationships focused on sustainable success and mutual growth.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Development -->
  <section class="relative py-24 bg-gradient-to-b from-white via-blue-50/30 to-white ">
    <div class="absolute top-0 right-1/4 w-64 h-64 bg-gradient-to-r from-[#C9A227]/10 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 w-80 h-80 bg-gradient-to-l from-profit-navy/10 to-transparent rounded-full blur-3xl"></div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-[#C9A227]/20 to-amber-600/20 rounded-full mb-6">
          <span class="text-sm font-bold text-[#C9A227] uppercase tracking-wide">Excellence Through Learning</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-profit-navy font-heading mb-6 leading-tight">
          Continuous Professional <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] to-amber-600">Development</span>
        </h2>
        <p class="text-xl text-profit-text font-body max-w-4xl mx-auto leading-relaxed">
          We invest continuously in training to merge academic excellence with practical industry insight, ensuring our team stays at the forefront of profit management innovation.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Advanced Certifications -->
        <div class="group flex gap-4 p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl border border-white/30 transition-all duration-500 hover:scale-105">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-xl flex items-center justify-center group-hover:rotate-12 transition-transform duration-500 shadow-md">
              <Icon name="tabler:certificate" class="w-6 h-6 text-white stroke-[1.5]" />
            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-profit-navy font-heading mb-2 group-hover:text-[#C9A227] transition-colors duration-300">Advanced Certifications</h3>
            <p class="text-profit-text font-body leading-relaxed">Regular pursuit of professional certifications in accounting, auditing, ERP systems, and management consulting.</p>
          </div>
        </div>

        <!-- Research & Development -->
        <div class="group flex gap-4 p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl border border-white/30 transition-all duration-500 hover:scale-105">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-profit-navy to-blue-600 rounded-xl flex items-center justify-center group-hover:rotate-12 transition-transform duration-500 shadow-md">
              <Icon name="tabler:flask" class="w-6 h-6 text-white stroke-[1.5]" />
            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-profit-navy font-heading mb-2 group-hover:text-[#C9A227] transition-colors duration-300">Research & Development</h3>
            <p class="text-profit-text font-body leading-relaxed">Active participation in academic research and development of new profit management methodologies.</p>
          </div>
        </div>

        <!-- Industry Conferences -->
        <div class="group flex gap-4 p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl border border-white/30 transition-all duration-500 hover:scale-105">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-[#C9A227] to-amber-600 rounded-xl flex items-center justify-center group-hover:rotate-12 transition-transform duration-500 shadow-md">
              <Icon name="tabler:presentation" class="w-6 h-6 text-white stroke-[1.5]" />
            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-profit-navy font-heading mb-2 group-hover:text-[#C9A227] transition-colors duration-300">Industry Conferences</h3>
            <p class="text-profit-text font-body leading-relaxed">Regular attendance at international conferences to stay current with global trends and best practices.</p>
          </div>
        </div>

        <!-- Knowledge Sharing -->
        <div class="group flex gap-4 p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl border border-white/30 transition-all duration-500 hover:scale-105">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-profit-navy to-blue-600 rounded-xl flex items-center justify-center group-hover:rotate-12 transition-transform duration-500 shadow-md">
              <Icon name="tabler:share" class="w-6 h-6 text-white stroke-[1.5]" />
            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-profit-navy font-heading mb-2 group-hover:text-[#C9A227] transition-colors duration-300">Knowledge Sharing</h3>
            <p class="text-profit-text font-body leading-relaxed">Internal training programs and knowledge sharing sessions to ensure team-wide expertise development.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="relative py-24 bg-gradient-to-br from-blue-50 via-white to-amber-50 ">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-5"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-[#C9A227]/10 to-profit-navy/10 rounded-full blur-3xl"></div>
    
    <div class="relative max-w-5xl mx-auto px-6 text-center">
      <div class="bg-white rounded-3xl p-12 md:p-16 shadow-2xl border border-white/30">
        <h2 class="text-4xl md:text-5xl font-bold text-profit-navy font-heading mb-6 leading-tight">
          Work With Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#C9A227] to-amber-600">Expert Team</span>
        </h2>
        <p class="text-xl text-profit-text font-body mb-10 max-w-3xl mx-auto leading-relaxed">
          Experience the difference that comes from working with seasoned professionals who combine academic rigor with practical expertise.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href="/contact" 
            class="group relative bg-gradient-to-r from-[#C9A227] via-amber-500 to-[#C9A227] bg-size-200 hover:bg-pos-100 text-white font-bold px-10 py-4 rounded-xl shadow-2xl hover:shadow-[#C9A227]/50 transform hover:scale-105 hover:-translate-y-1 transition-all duration-500 inline-flex items-center gap-3 "
          >
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
            <Icon name="tabler:users" class="w-6 h-6 relative z-10 group-hover:rotate-12 transition-transform duration-300" />
            <span class="relative z-10">Meet Our Team</span>
          </a>
          
          <a 
            href="/why" 
            class="group bg-white/80 hover:bg-white text-profit-navy font-semibold px-10 py-4 rounded-xl shadow-lg hover:shadow-xl border border-gray-200 hover:border-[#C9A227] transform hover:scale-105 transition-all duration-300 inline-flex items-center gap-3"
          >
            <Icon name="tabler:bulb" class="w-6 h-6 group-hover:text-[#C9A227] transition-colors duration-300" />
            <span>Learn About Our Approach</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
